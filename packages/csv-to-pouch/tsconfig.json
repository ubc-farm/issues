{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,

		"target": "es2017",
		"lib": ["es2016", "es2017.object"],
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*",
		"index.d.ts"
	],
	"exclude": [
		"node_modules",
		"rollup.config.js"
	]
}
