{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"suppressImplicitAnyIndexErrors": true,
		"noEmit": true,
		"checkJs": true,

		"jsx": "react",
		"jsxFactory": "createElement",

		"target": "es2017",
		"lib": [
			"es2016", "es2017.object",
			"dom", "dom.iterable"
		],
		"moduleResolution": "node"
	},
	"include": [
		"./lib/"
	],
	"exclude": [
		"./node_modules/",
		"./dist/",
		"./rollup.config.js"
	]
}
