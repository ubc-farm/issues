<!doctype html>
<html>
	<head>
		<title>{{page.title}} - {{data.app.title}}</title>
		<link href="/styles/core.css" rel="stylesheet">
		<link href="/styles/header.css" rel="stylesheet">
		<link href="/styles/sidebar.css" rel="stylesheet">
	</head>
	<body>
		{{> sidebar}}
		{{> header}}

		<main class="main">{{> body}}</main>
	</body>
	{{#each page.scripts}}
		{{#if (isString this)}}
			<script src="{{../data.app.server}}{{this}}"></script>
		{{else}}
			<script
				{{#if async}}async{{/if}}
				src="{{../data.app.server}}{{src}}"
			></script>
		{{/if}}
	{{/each}}
</html>
