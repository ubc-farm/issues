{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"suppressImplicitAnyIndexErrors": true,
		"skipLibCheck": true,

		"jsx": "react",
		"jsxFactory": "createElement",

		"target": "es2017",
		"lib": [
			"es2016", "es2017.object",
			"dom", "dom.iterable"
		],
		"moduleResolution": "node",
		"module": "commonjs",

		"outDir": "out"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
