<nav class="sidebar">
	<header class="sidebar-head">
		<img class="main-logo"
			alt="{{data.app.title}}"
			src="{{data.app.logo}}"
			srcset="{{join data.app.logo-srcset}}"
			width="48" height="48">
	</header>

	<ul class="sidebar-items">
		{{#each data.sidebar}}
		<li class="sidebar-item">
			<a class="sidebar-item-link" href={{this.link}}>
				<img class="sidebar-item-icon" alt="" src="{{this.icon}}">
				{{this.label}}
			</a>
		</li>
		{{/each}}
	</ul>

	<ul class="sidebar-bottom-items">
		{{#each data.sidebar-bottom}}
		<li class="sidebar-item">
			<a class="sidebar-item-link" href={{this.link}}>
				<img class="sidebar-item-icon" alt="" src="{{this.icon}}">
				{{this.label}}
			</a>
		</li>
		{{/each}}
	</ul>
</nav>
