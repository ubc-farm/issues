{
  "name": "@ubc-farm/server",
  "version": "2.5.0",
  "description": "Server for the ubc-farm program suite",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "bin": {
    "ubc-farm-server": "bin/ubc-farm-server.js"
  },
  "dependencies": {
    "@ubc-farm/knex-connection": "^1.1.0",
    "es7-object-polyfill": "0.0.3",
    "glob": "^7.1.1",
    "handlebars": "^4.0.5",
    "hapi": "^15.1.1",
    "inert": "^4.0.2",
    "minimist": "^1.2.0",
    "resolve": "^1.1.7",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "@ubc-farm/eslint-config": "^4.1.0",
    "@ubc-farm/babel-preset": "^1.0.0",
    "blue-tape": "^1.0.0",
    "eslint": "^3.8.0",
    "eslint-plugin-import": "^2.0.1",
    "proxyquire": "^1.7.10",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0"
  },
  "author": "Tiger Oakes <tigeroakes@gmail.com> (http://tigeroakes.com)",
  "license": "MIT",
  "repository": "ubc-farm/server",
  "bugs": "https://github.com/ubc-farm/server/issues",
  "scripts": {
    "prepare:cli": "rollup -c rollup.config.cli.js",
    "prepare:helper": "rollup -c rollup.config.test.js -o template-helpers/eachEntry.js template-helpers/src/eachEntry.js",
    "prepare:main": "rollup -c",
    "prepare": "npm run prepare:main && npm run prepare:cli && npm run prepare:helper",
    "prepublish": "npm run prepare"
  },
  "files": [
    "dist",
    "bin/ubc-farm-server.js",
    "template-helpers",
    "template-partials"
  ],
  "babel": {
    "presets": "@ubc-farm/babel-preset"
  },
  "eslintConfig": {
    "extends": "@ubc-farm/eslint-config",
    "rules": {
      "global-require": "off",
      "import/no-dynamic-require": "off",
      "import/no-commonjs": "off"
    }
  }
}
