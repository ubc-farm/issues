{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceRoot}\\src\\index.js",
			"cwd": "${workspaceRoot}",
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}\\dist\\*"],
			"preLaunchTask": "prepare"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch CLI",
			"program": "${workspaceRoot}\\bin\\src\\index.js",
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "prepare",
			"args": [
				"test/fixture/package.json"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}\\bin\\*"
			]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Process",
			"port": 5858
		}
	]
}