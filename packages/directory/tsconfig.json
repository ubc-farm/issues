{
	"compilerOptions": {
		"allowJs": true,
		"strictNullChecks": true,
		"noImplicitThis": true,

		"target": "esnext",
		"jsx": "react",
		"jsxFactory": "createElement",

		"lib": [
			"es2016", "es2017.object",
			"dom", "dom.iterable",
			"webworker"
		]
	},
	"include": [
		"src/**",
		"entry/**"
	],
	"exclude": [
		"node_modules"
	]
}
