{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"suppressImplicitAnyIndexErrors": true,

		"jsx": "react",
		"jsxFactory": "createElement",

		"target": "es2017",
		"lib": [
			"es2016", "es2017.object",
			"dom", "dom.iterable"
		],
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*",
		"entry/**/*"
	],
	"exclude": [
		"node_modules",
		"rollup.config.js"
	]
}
