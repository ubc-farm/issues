<a class="${data.className}" href="${data.href}" unless(data.radio)>
	<img class="i-tab-img icon" alt="" src="${data.icon}" width="36" height="36">
	<span class="i-tab-label">${data.text}</span>
</a>

<else>
	<input type="radio" class="i-radio" id="${data.href}" name="${data.name}">
	<label for="${data.href}" class="${data.className}">
		<img class="i-tab-img icon" alt="" src="${data.icon}" 
		     width="36" height="36">
		<span class="i-tab-label">${data.text}</span>
	</label>
</else>