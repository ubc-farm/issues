<article class=['event-box', ('event-type-' + data.type)]>
	<icon-button label="edit" class="event-box-button" />
	<if(data.type === 'task')>
		<input type="checkbox" id="${'event-checkbox-' + data.i}"/>
		<label class="event-header">${data.title}</label>
	</if><else>
		<p class="event-header">${data.title}</p>
	</else>
	<p class="event-header">${data.time}</p>
	<p class="event-header">${data.location}</p>
	<if(data.details)>
		<hr/>
		${data.details}	
	</if>
</article>