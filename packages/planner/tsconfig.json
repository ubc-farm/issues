{
	"compilerOptions": {
		"allowJs": true,
		"strictNullChecks": true,
		"jsx": "react",
		"target": "es2017",
		"noImplicitThis": true,
		"jsxFactory": "createElement",
		"lib": [
			"es2016", "es2017.object",
			"dom", "dom.iterable",
			"webworker"
		]
	},
	"include": [
		"src/**/*",
		"entry/**/*"
	],
	"exclude": [
		"node_modules",
		"rollup.config.js"
	]
}
