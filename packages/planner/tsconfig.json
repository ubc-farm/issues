{
	"compilerOptions": {
		"allowJs": true,
		"strictNullChecks": true,
		"jsx": "react",
		"target": "es2017",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"lib": [
			"es2016", "es2017.object",
			"dom", "dom.iterable",
			"webworker"
		]
	},
	"exclude": [
		"node_modules",
		"**/node_modules",
		"rollup.config.js"
	],
	"include": [
		"packages/*/src/**"
	]
}
